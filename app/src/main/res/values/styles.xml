<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalendarWeekBar">
        <item name = "android:textSize">15dp</item>
        <item name = "android:textColor">#00c0c0</item>
    </style>

    <style name="CalendarMonthBar">
        <item name = "android:textSize">20dp</item>
        <item name = "android:textColor">#00c0c0</item>
    </style>

    <style name="EditTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#00c0c0</item>
        <item name="colorControlNormal">#00c0c0</item>
    </style>


